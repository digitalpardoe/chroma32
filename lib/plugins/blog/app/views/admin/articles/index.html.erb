<h2>Articles</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Posted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= article.created_at.to_s(:date_time) %></td>
    <td><%= link_to 'Show', admin_article_path(article) %></td>
    <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
    <td><%= link_to 'Destroy', admin_article_path(article), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<ul class="links">
  <li><%= link_to 'Add Article', new_admin_article_path %></li>
</ul>
