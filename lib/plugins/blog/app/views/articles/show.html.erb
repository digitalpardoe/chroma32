<h2><%= @article.title %></h2>

<div id="view">
  <% if @article.document %>
    <p class="image"><%= image_tag thumbnail_path(@article.document) %></p>
  <% end %>
  
  <%= textilize(@article.body).html_safe %>
  
  <p><b>By</b> <%= @article.author %> <b>on</b> <%= @article.created_at.to_s(:date_time) %></p>
</div>