<h2><%= @event.name %> - <%= @event.date.to_s(:date) %></h2>

<p><%= link_to "Back To Your Events", events_path %><p>

<p><b>Location:</b> <%= @event.location %></p>

<%= textilize(@event.description).html_safe %>

<% @documents.each do |document| %>
<div id="event_document">
  <%= image_tag thumbnail_path(document), :size => "100x100" %>
  <h3><%= document.name %></h3> - <%= number_to_human_size(document.size) %> - <%= link_to 'Download', file_path(document) %>
</div>
<% end %>
