<% form_for(@user_session, :url => user_session_path) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
