<h1>Settings</h1>

<% form_for :setting, :url => { :action => "update", :id => @settings.object_id }, :html => { :method => :put } do |f| %>
  <% for setting in @settings %>
    <div class="field">
      <%= f.label setting.key, setting.key.humanize %><br />
      <%= f.text_field setting.key, :value => setting.value, :size => 50 %>
    </div>
  <% end %>
  
  <td><%= f.submit "Save Settings" %></td>
<% end %>