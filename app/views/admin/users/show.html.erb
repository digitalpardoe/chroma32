<h2>Viewing User</h2>

<h3><%= @user.email %></h3>

<table>
  <tr>
    <td><b>Login count:</b></td>
    <td><%= @user.login_count %></td>
  </tr>
  <tr>
    <td><b>Failed login count:</b></td>
    <td><%= @user.failed_login_count %></td>
  </tr>
  <tr>
    <td><b>Last request at:</b></td>
    <td><%= @user.last_request_at.to_s(:date_time) if @user.last_request_at %></td>
  </tr>
  <tr>
    <td><b>Current login at:</b></td>
    <td><%= @user.current_login_at.to_s(:date_time) if @user.current_login_at %></td>
  </tr>
  <tr>
    <td><b>Last login at:</b></td>
    <td><%= @user.last_login_at.to_s(:date_time) if @user.last_login_at %></td>
  </tr>
  <tr>
    <td><b>Current login ip:</b></td>
    <td><%= @user.current_login_ip %></td>
  </tr>
  <tr>
    <td><b>Last login ip:</b></td>
    <td><%= @user.last_login_ip %></td>
  </tr>
</table>

<ul class="links">
  <li><%= link_to 'Edit', edit_admin_user_path(@user) %></li>
  <li><%= link_to 'Back', admin_users_path %></li>
</ul>
