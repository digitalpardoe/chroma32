<h2>Upload Document</h2>

<% form_for(@document, :url => admin_catalog_documents_path, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :document %><br />
    <%= f.file_field :document %>
  </div>
  <div class="field">
    <%= f.label :public %><br />
    <%= f.check_box :public %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<ul class="links">
  <li><%= link_to 'Back', admin_catalog_path(@catalog) %></li>
</ul>
