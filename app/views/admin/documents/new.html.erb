<h2>Upload Document</h2>

<% form_for(@document, :url => admin_catalog_documents_path, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <table>
    <tr>
      <td><%= f.label :document %></td>
      <td><%= f.file_field :document %></td>
    </tr>
    <tr>
      <td><%= f.label :public %></td>
      <td><%= f.check_box :public %></td>
    </tr>
  </table>

  <%= f.submit %>
<% end %>

<ul class="links">
  <li><%= link_to 'Back', admin_catalog_path(@catalog) %></li>
</ul>
