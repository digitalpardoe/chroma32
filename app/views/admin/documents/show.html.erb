<h2>Viewing Document</h2>

<p>
  <b>Name:</b>
  <%= @document.name %>
</p>

<p>
  <b>Extension:</b>
  <%= @document.extension %>
</p>

<p>
  <b>Size:</b>
  <%= @document.size %>
</p>

<p>
  <b>Content type:</b>
  <%= @document.content_type %>
</p>

<p>
  <b>Signature:</b>
  <%= @document.signature %>
</p>

<% if @document.content_type =~ /image/ %>
  <p>
    <b>Image data:</b><br />
    <%= image_tag thumbnail_path(@document), :title => @document.name, :alt => @document.name %>
  </p>
<% end %>

<ul class="links">
  <li><%= link_to 'Edit', edit_admin_catalog_document_path(@document) %></li>
  <li><%= link_to 'Back', admin_catalog_path(@catalog) %></li>
</ul>
